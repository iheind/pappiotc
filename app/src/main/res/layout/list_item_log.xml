<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/icon_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_days_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5d ago" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_client_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:text="Dr. Alice Walker"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/list_item_note_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/note_border"
            android:padding="@dimen/icon_padding"
            android:layout_below="@+id/list_item_client_textview"
            android:text="interested in flu related medicine, will flow up later" />

        <ImageView
            android:id="@+id/list_item_edit_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/icon_padding">

        <Button
            android:id="@+id/list_item_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:minHeight="@dimen/normal_margin"
            android:text="Save" />

        <Button
            android:id="@+id/list_item_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:textAllCaps="false"
            android:minHeight="@dimen/normal_margin"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_toRightOf="@+id/list_item_save_button"
            android:text="Cancel" />
    </RelativeLayout>


</LinearLayout>